class RatingsController < ApplicationController
  def index
    @ratings = Rating.all
  end
  def new
    @rating = Rating.new
  end

  def create
    Rating.create params.require(:rating).permit(:score, :beer_id)
       Rating.all.select{ |r| r.beer.nil? }.each{ |r| r.delete }
    redirect_to ratings_path
  end
end
