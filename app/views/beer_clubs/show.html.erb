<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<p>
  <% @beer_club.users.each do |user| %>
  <%= link_to user.username, user %>
  <% end %>
</p>
<%= button_to "Delete this club", @beer_club, :class => "btn btn-danger btn-xs", :method => :delete, data: { confirm: 'Are you sure?' } %>
<%= button_to "Edit", edit_beer_club_path(@beer_club), :method => :get, :class => "btn btn-warning btn-xs" %>
<%= link_to 'Back', beer_clubs_path %>
