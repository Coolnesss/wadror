<p id="notice"><%= notice %></p>

<h1>Listing Beer Clubs</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Founded</th>
          <th>City</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <p class="text-center"> Number of Beer Clubs: <span class="badge"> <%= @beer_clubs.count %> </span> </p>
        <% @beer_clubs.each do |beer_club| %>
        <tr>
          <td><%= link_to beer_club.name, beer_club %></td>
          <td><%= beer_club.founded %></td>
          <td><%= button_to "Edit", edit_beer_club_path(beer_club), :class => "btn btn-warning btn-xs", :method => :get %></td>
          <td><%= button_to "Delete", beer_club, :class => "btn btn-danger btn-xs", :method => :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="col-md-6 col-md-offset-3">
  <%= link_to 'New Beer club', new_beer_club_path, :class => "btn btn-success" %>
</div>
