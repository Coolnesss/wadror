<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<% cache 'userlist', skip_digest: true do %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Ratings</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <p class="text-center"> Number of users: <span class="badge"> <%= @users.count %> </span> </p>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user %> <% if user.banned? %><span class="badge">Banned</span><% end %></td>
          <td><span class="badge"> <%= user.ratings.count %> </span> </td>
        </tr>
        <% end %>


      </tbody>
    </table>
  </div>
</div>
<br>

<% end %>

<div class="col-md-6 col-md-offset-3">
<%= link_to 'New User', new_user_path, :class => "btn btn-success ", :method => :get %>
</div>
