<h1>List of ratings</h1>
<p class="text-center"> Number of ratings: <span class="badge"> <%= @ratings.count %> </span> </p>

<p>

</p>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @ratings.each do |rating| %>
  <tr>
      <td> <%= link_to rating.beer.name, rating.beer %></td>
      <td><span class="badge"> <%= rating.score %></span></td>
      <td><%= link_to rating.user.username, rating.user, :class => "btn btn-default btn-xs", method: :get %></td>
   <% end %>
 </tr>
 </tbody>
  </table>
</div>
</div>
<% if not current_user.nil? %>
  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'Create a new rating', new_rating_path, :class => "btn btn-success", :method => :get %>
  </div>
<% end %>
