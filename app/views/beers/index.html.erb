<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <p class="text-center"> Number of beers: <span class="badge"> <%= @beers.count %> </span> </p>


        <% @beers.each do |beer| %>
          <tr>
            <td><%= link_to beer.name, beer %></td>
            <td><%= beer.style %></td>
            <td><%= link_to beer.brewery.name, beer.brewery %></td>
            <td><%= button_to "Edit", edit_beer_path(beer), :class => "btn btn-warning btn-xs", :method => :get %></td>
            <td><%= button_to "Delete", beer, :class => "btn btn-danger btn-xs", :method => :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>


  </tbody>
</table>
</div>
</div>
<br>
<div class="col-md-6 col-md-offset-3">

<%= link_to "List of breweries", breweries_path, :class => "btn btn-default", :method => :get %>
<%= link_to "New Beer", new_beer_path, :class => "btn btn-success text-center", :method => :get %>
</div>
