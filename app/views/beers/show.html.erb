<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>
<p>
       <% if @beer.ratings.empty? %>
         This beer has not yet been rated!
        <% else %>
         Beer has <%= pluralize @beer.ratings.count, 'rating', 'ratings' %>, average <%= @beer.average_rating %>
        <% end %>
</p>
<%= button_to "Delete", @beer, :class => "btn btn-danger btn-xs", :method => :delete, data: { confirm: 'Are you sure?' } %>
<%= button_to "Edit", edit_beer_path(@beer), :class => "btn btn-warning btn-xs", :method => :get %>
<%= link_to 'Back', beers_path %>
