<p id="notice"><%= notice %></p>


<% cache 'brewerylist', skip_digest: true do %>

<h1>Listing Active Breweries</h1>
<p class="text-center"> Number of active breweries: <span class="badge"> <%= @active_breweries.count %> </span> </p>

<%= render 'list', breweries: @active_breweries %>

<h1>Listing Retired Breweries</h1>

<p class="text-center"> Number of retired breweries: <span class="badge"> <%= @retired_breweries.count %> </span> </p>

<%= render 'list', breweries: @retired_breweries %>

<br>
<div class="center-block">
  <div class="col-md-6 col-md-offset-3">
  <%= link_to "List of beers", beers_path, :class => "btn btn-default", :method => :get %>
  <% if not current_user.nil? %>
    <%= link_to "New Brewery", new_brewery_path, :class => "btn btn-success", :method => :get %>
  <% end %>
</div>
</div>

<% end %>
