<p id="notice"><%= notice %></p>

<h1>Listing Breweries</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <p class="text-center"> Number of breweries: <span class="badge"> <%= @breweries.count %> </span> </p>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>
<div class="center-block">
<table>
  <div class="col-md-6 col-md-offset-3">
  <%= link_to "List of beers", beers_path, :class => "btn btn-default", :method => :get %>
  <% if not current_user.nil? %>
    <%= link_to "New Brewery", new_brewery_path, :class => "btn btn-success", :method => :get %>
  <% end %>
</div>
</div>
