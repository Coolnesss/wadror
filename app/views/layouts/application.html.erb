<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul class="nav nav-tabs">
    <li role="presentation"><%= link_to 'Breweries', breweries_path %></li>
    <li role="presentation"><%= link_to 'Beers', beers_path %></li>
    <li role="presentation"><%= link_to 'Ratings', ratings_path %></li>
    <li role="presentation"><%= link_to 'Users', users_path %></li>
    <li role="presentation"><%= link_to 'Beer Clubs', beer_clubs_path %></li>
    <li role="presentation"><%= link_to 'Places', places_path %></li>
    <li role="presentation"><%= link_to 'Styles', styles_path %></li>

    <% if not current_user.nil? %>
      <li role="presentation" class="dropdown navbar-right">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
        <%= current_user.username %> <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
          <li><%= link_to "Rate a beer", new_rating_path%></li>
          <li><%= link_to "Join a club", new_membership_path %></li>
        </ul>
      </li>
      <% else %>
    <li class="navbar-right"><%= button_to "Sign in", signin_path, :class => "btn btn-default navbar-btn", :method => :get %></li>
    <li class="navbar-right"><%= button_to "Sign up", signup_path, :class => "btn btn-default navbar-btn", :method => :get %></li>
    <li class="navbar-right"><%= button_to "Sign in with Github", 'auth/github', :class => "btn btn-primary navbar-btn" %></li>

    <% end %>
  </ul>


  <%= yield %>
</body>
</html>
